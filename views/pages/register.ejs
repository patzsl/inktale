<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../layouts/head', { title: 'Register | Inktale' }) %>
</head>

<body>
    <section class="section form-section">
        <div class="container">
            <div class="form-card">
                <div class="card-header">
                    <a href="" class="logo">
                        <img src="/images/logo-light.svg" alt="Inktable" class="light">
                        <img src="/images/logo-dark.svg" alt="Inktable" class="dark">
                    </a>
                    <p class="body-large text-on-surface-variant">Join the inktable community</p>
                </div>

                <form action="" class="form" data-form>
                    <div class="text-field-wrapper">
                        <label for="name" class="body-large label">Full name</label>
                        <input type="text" name="name" id="name" autocomplete="name" autofocus placeholder=" " required
                            class="body-large text-field">
                    </div>
                    <div class="text-field-wrapper">
                        <label for="email" class="body-large label">E-mail</label>
                        <input type="email" name="email" id="email" autocomplete="email" placeholder=" " required
                            class="body-large text-field">
                    </div>
                    <div class="text-field-wrapper">
                        <label for="password" class="body-large label">Password</label>
                        <input type="password" name="password" id="password" placeholder=" " minlength="8" required
                            class="body-large text-field">
                    </div>
                    <div class="text-field-wrapper">
                        <label for="confirm-password" class="body-large label">Confirm password</label>
                        <input type="password" name="confirm-password" id="confirm-password" placeholder=" " required
                            class="body-large text-field">
                    </div>

                    <button type="submit" class="btn btn-fill" data-submit-btn>
                        <p class="label-large">Sign up</p>
                        <div class="state-layer"></div>
                    </button>
                </form>

                <div class="card-footer">
                    <p class="label-large">Already have an account?</p>
                    <a href="/login" class="label-large text-primary">Sign in</a>
                </div>
            </div>
        </div>
    </section>
</body>

</html>